sam p1

import java.awt.Label;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;
public class AWTSetup extends Framerame {
    public AWTSetup() {
        // create frame with title
//        Frame frame = new Frame("AWT Test");

        //create label component
        Label label = new Label("AWT Label");

        // add label to frame
        add(label);

        //set frame size
        setSize(1000,800);

        //set layout manager to null
        setLayout(null);

        //make frame visible
        setVisible(true);


        //add a WindowListener to handle closing window
        addWindowListener(new WindowAdapter() {
//            @Override (added by intellij)
            public void windowClosing(WindowEvent e) {
                System.exit(0);
            }
        });
    }
    public static void main(String[] args){
//        create instance of AWT Setup
        AWTSetup setup = new AWTSetup();
    }
}






SAM P2

import java.awt.Frame;
import java.awt.Graphics;
import java.awt.Image;
import java.awt.MediaTracker;
import java.awt.Toolkit;
import java.awt.event.WindowEvent;
import java.awt.event.WindowAdapter;
public class ImageDisplay {
    private Image image;

    public ImageDisplay(){
        // load an image
        image = Toolkit.getDefaultToolkit().getImage(path/to/your/image.jpg);

        //use media tracker to wait for image to be loaded
        MediaTracker mediaTracker = new MediaTracker(this);
        mediaTracker.addImage(image, 0,100,100);

        try {
            mediaTracker.waitForAll();
        }
        catch (InterruptedException e){
            e.printStackTrace();
        }

        // set size of frame (based off image)
        setSize(image.getWidth(this), image.getHeight(this));


        // add windowlistener to close
        addWindowListener(new WindowAdapter() {
            public void windowClosing(WindowEvent we) {
                //termninate program when window is closed
                System.exit(0);
            }
        });
    }
    public void paint(Graphics g) {
        //dram image at coords 0,0
        g.drawImage(image, 0, 0, this);
    }
    public static void main(String[] args){
        //create instance of imagedisplay
    }


}
